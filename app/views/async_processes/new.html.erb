<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Nueva carga masiva</h1>

  <%= form_with(model: @async_process, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label 'Subir varios archivos XML' %>
      <%= form.file_field :files, multiple: true %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to 'Regresar a invoices', invoices_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
